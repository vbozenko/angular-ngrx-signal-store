/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "paths": {
      "shared": [
        "./libs/shared/src/public-api.ts",
        "./libs/shared/src/public-api",
        "./dist/shared"
      ],
      "store": [
        "./libs/store/src/index.ts",
        "./libs/store/src/public-api.ts",
        "./libs/store/src/public-api",
        "./dist/store"
      ],
      "store/*": [
        "./libs/store/src/lib/*"
      ],
      "services": [
        "./libs/services/src/public-api.ts",
        "./libs/services/src/public-api",
        "./dist/services"
      ],
      "components": [
        "./libs/components/src/public-api.ts",
        "./libs/components/src/public-api",
        "./dist/components"
      ]
    },
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./libs/shared/tsconfig.lib.json"
    },
    {
      "path": "./libs/shared/tsconfig.spec.json"
    },
    {
      "path": "./libs/store/tsconfig.lib.json"
    },
    {
      "path": "./libs/store/tsconfig.spec.json"
    },
    {
      "path": "./libs/services/tsconfig.lib.json"
    },
    {
      "path": "./libs/services/tsconfig.spec.json"
    },
    {
      "path": "./libs/components/tsconfig.lib.json"
    },
    {
      "path": "./libs/components/tsconfig.spec.json"
    }
  ]
}
